{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/public/assets/$1"
        },
        {
            "source": "/vite.svg",
            "destination": "/public/vite.svg"
        },
        {
            "source": "/((?!api/|public/|favicon.ico).*)",
            "destination": "/public/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "maxDuration": 300
        }
    }
}