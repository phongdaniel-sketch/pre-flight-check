{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/((?!assets/|favicon.ico).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "maxDuration": 60,
            "excludeFiles": "node_modules/**/ffmpeg-static/**,node_modules/**/ffprobe-static/**"
        }
    }
}